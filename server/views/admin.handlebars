<main class="pg-main">
  <div class="pg-main-content">
    <div class="pg-main-center">
      <form method="POST" action="/admin/dischargeDoctor">
        <div class="login-logo-wrapper">
          <img src="/public/images/logo3.png" alt="Asclepo" />
        </div>
        <h3 class="text-center login-title">Alta de doctores</h3>
        <div class="form-group form-label">
          <label for="nombre">Nombre:</label>
          <input
            type="text"
            class="form-control"
            id="nombre"
            name="name"
            required=""
          />
        </div>

        <div class="form-group form-label">
          <label for="correo">Correo electrónico:</label>
          <input
            type="email"
            class="form-control"
            id="correo"
            name="email"
            required=""
          />
        </div>

        <div class="form-group form-label">
          <label for="contraseña">Contraseña:</label>
          <input
            type="password"
            class="form-control"
            id="contraseña"
            name="password"
            required=""
          />
        </div>

        <div class="form-group form-label">
          <label for="especialidad">Especialidad:</label>
          <select
            class="form-control"
            id="especialidad"
            name="specialty"
            required=""
          >
            <option value="" disabled selected>Selecciona una especialidad</option>
            <option value="cardiología">Cardiología</option>
            <option value="dermatología">Dermatología</option>
            <option value="endocrinología">Endocrinología</option>
            <option value="gastroenterología">Gastroenterología</option>
            <option value="neurología">Neurología</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary btn-login">Dar de alta</button>
      </form>
    </div>

  </div>
</main>

{{#if showFieldMessage}}
  <div class="field-message successfull">
    {{message}}
  </div>
{{/if}}

{{#if showMessageFieldFocus}}
  <div class="field-message warning">
    {{#ifEquals fieldFocus "email"}}
      El correo '{{data.email}}' ya se encuentra en uso por otro doctor.
    {{/ifEquals}}
  </div>
{{/if}}

<script>
  setTimeout(() => { $(".field-message")?.remove(); }, 5000);
</script>